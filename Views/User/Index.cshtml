@using MyDigitalCv.Data;
@model IEnumerable<AppUser>;
@if (User.IsInRole(UserRoles.Admin))
{

	<h1>Welcome to master's room</h1>
	@if (Model.Count() == 0)
	{
		<p>No users here yet</p>
	}
		<div class="container-fluid">
		<div class="card-group">

			@foreach (var user in Model)
			{
				<div class="card mb-3 col-3">
					<div class="card-header">@user.FirstName @user.LastName</div>
					<div class="card-body">

						<img class="card-image w-100" src="@(user.ProfilePictureUrl ?? Const.DefaultUserProfilePicture)"></img>
						<ul>
							<li>@user.DateOfBirth</li>
							<li>@(user.Phone ?? "no phone")</li>
							<li>@(user.Company ?? "Company not assigned")</li>
							<li>@(user.Nickname ?? "JohnDoe")</li>
						</ul>
					</div>
				</div>
			}
		</div>
	</div>


}
else
{
	<p>You must be an admin to watch this page</p>
}